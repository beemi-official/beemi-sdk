{
  "name": "Sample Trivia Game",
  "id": "sample-trivia-123",
  "version": "1.0.0",
  "description": "A sample trivia game with multiplayer and streaming features",
  "category": "trivia",
  "main": "index.html",
  "beemi": {
    "sdkVersion": "2.0.0",
    "core": {
      "required": true
    },
    "multiplayer-p2p": {
      "required": true,
      "config": {
        "maxPlayers": 6,
        "visibility": "public",
        "persistState": true
      }
    },
                    "streams": {
          "required": true
        }
  },
  "development": {
    "emulatorPath": "/development/emulator/",
    "postCreate": "npm install"
  }
} 